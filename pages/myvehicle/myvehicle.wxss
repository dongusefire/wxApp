/* pages/myvehicle/myvehicle.wxss */
#myvehicle {
  background: #fbfbfb;
  width:91%;
  margin: 0 auto;
}
.addvehicle {
  margin-top: 64rpx;
  height: 84rpx;
  line-height: 84rpx;
  background: #FFFFFF;
  border: 1px dashed #DCDCDC;
  border-radius: 4px;
  text-align: center;
  vertical-align: middle;
  font-size: 30rpx;
  font-weight: bold;
}
.addvehicle text {
  padding-left: 12rpx;
}
/* 车牌列表 */
.vehicle-list {
  margin-top: 40rpx;
}
.vehicle-list .vehicle-box {
  background: #e4e4e4;
  height: 180rpx;
  -webkit-box-shadow:0px 5px 15px #e5e5e5;
  -moz-box-shadow:0px 5px 15px #e5e5e5;
  box-shadow:0px 5px 15px #e5e5e5;
  margin-bottom: 28rpx;
  position: relative;
}
.vehicle-list .vehicle-box:last-child {
  margin-bottom: 0;
}
.vehicle-list .vehicle-box .vehicle-bg {
  position: relative;
  z-index: 1;
}
.vehicle-list .vehicle-box .vehicle-bg image {
  width: 100%;
}
.vehicle-list .vehicle-box .default {
  position: absolute;
  top:28rpx;
  left:34rpx;
  z-index: 2;
  color:rgba(255,255,255,0.5);
  font-size: 24rpx;
}
.vehicle-list .vehicle-box .vehicle-title {
  position: absolute;
  top:68rpx;
  left:86rpx;
  z-index: 2;
  color:#fff;
  font-size: 56rpx;
}
.vehicle-list .vehicle-box .removeCar {
  position: absolute;
  top:56rpx;
  right:36rpx;
  z-index: 2;
  color:#fff;
  opacity: 0.8;
  border: 1px solid #FFFFFF;
  border-radius: 4px;
  font-size: 28rpx;
  width:116rpx;
  height: 64rpx;
  text-align: center;
  line-height: 64rpx;
}