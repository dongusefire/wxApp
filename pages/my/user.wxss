/* pages/my/user.wxss */
.container {
  background: #fafafa;
}
.index-hd{
  width:100%;
  height:210rpx;
  padding-top: 50rpx;
  background: #30ddd9;
  font-size: 0;
}
.index-hd-n{
  width:100%;
  height:210rpx;
  padding-top: 50rpx;
  padding-bottom: 50rpx;
  background: #30ddd9;
}
.index-hd .user-avatar {
  width:148rpx;
  height: 148rpx;
  border:4rpx rgba(255,255,255,0.8) solid;
  border-radius: 74rpx;
  overflow: hidden;
  margin-left: 36rpx;
  display: inline-block;
}
.index-hd .user-avatar image {
  width: 148rpx;
}
.index-hd .user-info {
  display: inline-block;
  font-size:24rpx;
  padding-top: 25rpx;
  padding-left: 15rpx;
  vertical-align: top;
  color:#fff;
}
.index-hd .user-info .user-name {
  padding-bottom: 25rpx;
}
.index-hd .user-grade image {
  width: 36rpx;
}
.index-hd .user-credit {
  color: rgba(255,255,255,0.5);
}
.index-hd .user-credit .value {
  color:#fff;
  font-size: 28rpx;
}

.index-bd{
  margin-top:30rpx;
  background: #fff;
  border:2rpx #ececec solid;
}
.index-nav{
  padding-left: 36rpx;
  padding-right: 25rpx;
  position: relative;
}
.index-nav::after {
  content: '';
  position: absolute;
  bottom:0;
  right:0;
  left:124rpx;
  height:2rpx;
  background:#ececec;
}
.index-nav:last-child::after {
  content: initial;
}
.nav{
  height:116rpx;
  display: -webkit-box;
  display: -moz-box;
  display: -ms-flexbox;
  display: -webkit-flex;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.nav .icon-left{
   width:48rpx;
   height:44rpx;
}
.nav .icon-left image{
  width:100%;
  height:100%;
}
.nav .icon-center{
  flex:1;
  padding-left:8%;
}
.nav .icon-center p{
    font-size: 30rpx;
    color:#5e5e5e;
}
.nav .icon-right{
  width:36rpx;
}
.nav .icon-right image{
  width:100%;
  height:100%;
}
.noImg {
  width:148rpx;
  height:148rpx;
  border-radius:74rpx;
  overflow:hidden;
  margin:0 auto;
}
.noImg image {
  width:148rpx;
  height:148rpx;
}
.fa {
  color:#ffffff;
}
.fa .operation{
  text-align: center;
  padding-top: 10rpx;
}
.fa .operation navigator {
  display: inline-block;
  font-size: 30rpx;
}
